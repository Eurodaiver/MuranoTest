@using MuranoTest.Models
@model SearchResultsViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MuranoTest</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <div class="container">
        <main role="main" class="pb-3">

            <div class="text-center">
                <h1 class="display-4 m-3">Local search</h1>

                <form method="post">
                    <input class="" type="text" name="TextRequest" />
                    <input class="btn btn-primary ml-2" type="submit" value="Search" />
                </form>
                @if (Model != null)
                {
                    <div class="m-5 text-left">
                        @if (Model != null)
                            @foreach (SearchResultItem item in Model.resultItems)
                            {
                                <div class="m-4 text-left p-3 shadow">
                                    <p class="font-weight-bold">@item.Header</p>
                                    <p class="">@item.Text</p>
                                    <p><a href="@item.Url">@item.Link</a></p>
                                </div>
                            }
                    </div>

                }

            </div>


        </main>
    </div>

</body>
</html>